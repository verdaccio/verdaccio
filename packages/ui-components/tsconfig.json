{
  "extends": "../../tsconfig.reference.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "preserveSymlinks": true,
    "jsx": "react",
    "allowJs": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../core/types"
    }
  ]
}
