{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "types": ["node", "express", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    // "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "types/*.d.ts"],
  "exclude": [
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/test",
    "**/__tests__",
    "**/*.test.ts"
  ]
}
